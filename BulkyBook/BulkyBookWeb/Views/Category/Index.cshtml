@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@*<partial name="_Notification" /> we can use it but for every page we have to write it so just add it in layout before Renderings*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-warning">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary"><i class="bi bi-plus-circle"></i> &nbsp;Create New Category</a>
        </div>
    </div>
    <br /><br />





<table class="table table-hover" style="width : 100%">
    <thead>
        <tr class="table-secondary">
            <th>Name</th>
            <th>Order No.</th>
            <th></th>
            <th></th>
        </tr>
     
    </thead>
    <tbody>
            @foreach(var obj in Model){
            <tr class="table-secondary">
            <td width="40%">@obj.Name</td>
            <td width="20%">@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i> &nbsp;Edit</a>
                  </div>

            </td>
            <td>
                 <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-trash"></i> &nbsp;Delete</a>
                  </div>

            </td>
        
        </tr>
            }
    </tbody>
    



</table>
</div>


